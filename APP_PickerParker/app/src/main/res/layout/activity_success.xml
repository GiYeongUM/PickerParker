<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDEDED"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="15dp"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:gravity="center"
            android:text="결제가 완료되었습니다."
            android:textColor="#000000"
            android:textSize="15sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_regular"
            android:gravity="center"
            android:text="예약정보는 "
            android:textColor="#000000"
            android:textSize="15sp"/>
            <TextView
                android:id="@+id/success_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:clickable="true"
                android:gravity="center"
                android:text="내역"
                android:textColor="#000000"
                android:textSize="15sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center"
                android:text="란에서 다시 확인하실 수 있습니다."
                android:textColor="#000000"
                android:textSize="15sp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="15dp"
            android:text="주차장 이름"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="45dp"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:id="@+id/success_img"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="180dp"
                android:src="@drawable/parkinglot1">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="235dp"
            android:layout_marginHorizontal="15dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_baseline_explore_24_enable"
                android:textColor="#ffffff">
            </ImageView>

            <TextView
                android:id="@+id/success_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center"
                android:text="주소"
                android:textColor="#000000"
                android:textSize="15sp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="265dp"
            android:layout_marginHorizontal="15dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/booking_icon_enable"
                android:textColor="#ffffff">
            </ImageView>

            <TextView
                android:id="@+id/success_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp"
                android:fontFamily="@font/notosans_regular"
                android:gravity="center"
                android:text="날짜"
                android:textColor="#000000"
                android:textSize="15sp"></TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="295dp"
            android:layout_marginHorizontal="15dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/booking_price_enable"
                android:textColor="#ffffff">
            </ImageView>
            <TextView
                android:id="@+id/success_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3000원"
                android:textColor="#000000"
                android:textSize="15sp"
                android:gravity="center"
                android:fontFamily="@font/notosans_regular"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="3dp">
            </TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>