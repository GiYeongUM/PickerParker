<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    android:background="#F3F2F2"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="0dp">

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="120dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="0dp"
            android:layout_marginVertical="8dp"
            android:layout_marginLeft="8dp">

            <ImageView
                android:id="@+id/booking_parkinglotImage"
                android:layout_width="140dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/parkinglotName"
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:text="주차장 이름"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사용예정"
                    android:layout_gravity="center_vertical"
                    android:textColor="@android:color/holo_red_dark"
                    android:fontFamily="@font/notosans_regular"
                    android:textSize="13sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:backgroundTint="#989898"
                android:background="@color/darkgray"></View>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주소"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parkinglotAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:textFontWeight="100"
                    android:text="경기도 시흥시 정왕동 2121-1 "
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="결제 금액"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parkinglotPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="3,000원"
                    android:textFontWeight="100"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="예약 일자"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/parkinglotSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="2020년 07월 22일(수) 12:00\n~ 2020년 07월 22일(월) 14:00"
                    android:fontFamily="@font/notosans_regular"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/btn_check_in"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="183dp"
                android:layout_height="32dp"
                android:background="@drawable/btn_orange"
                android:fontFamily="@font/notosans_regular"
                android:text="입차"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/delete_booking_Button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="183dp"
                android:layout_height="32dp"
                android:layout_marginLeft="10dp"

                android:background="@drawable/btn_orange_stroke"
                android:fontFamily="@font/notosans_regular"
                android:text="예약 취소"
                android:textColor="@color/colorTintOrange"
                android:textSize="13sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>