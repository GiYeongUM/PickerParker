<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
android:color="@color/colorTintDarkOrange">
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">
        <solid android:color="@color/colorTintDarkOrange" />
        <corners android:radius="7dp" />
    </shape>
</item>

<item android:id="@android:id/background">
    <shape android:shape="rectangle">
        <gradient
            android:angle="90"
            android:endColor="@color/colorTintOrange"
            android:startColor="@color/colorTintOrange"
            android:type="linear" />
        <corners android:radius="7dp" />
    </shape>
</item>
</ripple>