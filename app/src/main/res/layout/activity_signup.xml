<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top|center"
    android:background="@color/White"
    tools:context=".activity.SignupActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="아이디"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_id"
                        android:layout_width="247dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="예 : pickerparker1234"
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btn_check_duplication"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="90dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_orange"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="중복확인"
                        android:textColor="@android:color/white"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="비밀번호"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_pw"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="비밀번호를 입력해주세요."
                        android:password="true"
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="비밀번호 확인"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_pw_repeat"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="비밀번호를 입력해주세요."
                        android:password="true"
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="이름"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_name"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="이름을 입력해주세요."
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="닉네임"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_nickname"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="닉네임을 입력해주세요."
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="이메일"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_email"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="이메일을 입력해주세요."
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="휴대폰"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_phone"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="숫자만 입력해주세요."
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="차량번호"
                        android:textColor="#000000"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:fontFamily="@font/nanumgothicbold"
                        android:text="*"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/edittext_carnum"
                        android:layout_width="347dp"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/btn_check_duplication"
                        android:background="@drawable/login_selector"
                        android:fontFamily="@font/nanumgothic"
                        android:hint="차번호를 입력해주세요."
                        android:maxLines="1"
                        android:paddingVertical="13dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:textColor="#000000"
                        android:textColorHint="#BABABA"
                        android:textCursorDrawable="@drawable/cursor_color"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_signup_finish"
                android:layout_width="347dp"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:background="@drawable/btn_orange"
                android:textColor="@android:color/white"
                android:fontFamily="@font/nanumgothicbold"
                android:text="가입하기"
                style="?android:attr/borderlessButtonStyle"
                android:textSize="15sp"
                />

        </LinearLayout>




    </ScrollView>
</LinearLayout>