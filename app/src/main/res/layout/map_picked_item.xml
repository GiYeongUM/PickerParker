<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDEDED"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardCornerRadius="20dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="185dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp">
            <ImageView
                android:id="@+id/picked_imageView"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="185dp">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="205dp"
            android:layout_marginHorizontal="10dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_baseline_explore_24_enable"
                android:textColor="#ffffff">
            </ImageView>

            <TextView
                android:id="@+id/textView_Address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="경기도 시흥시 정왕동 산기대학로 237"
                android:textStyle="bold"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="235dp"
            android:layout_marginHorizontal="10dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/booking_icon_enable"
                android:textColor="#ffffff">
            </ImageView>

            <TextView
                android:id="@+id/textView_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="운영시간"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="265dp"
            android:layout_marginHorizontal="10dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/booking_price_enable"
                android:textColor="#ffffff">
            </ImageView>

            <TextView
                android:id="@+id/textView_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="가격"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="295dp"
            android:layout_marginHorizontal="10dp"
            >
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/ic_baseline_location_on_24"
                android:textColor="#ffffff">
            </ImageView>

            <TextView
                android:id="@+id/textview_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:text="거리"
                android:textStyle="bold"/>
        </LinearLayout>
        <Button
            android:id="@+id/picked_Btn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/btn_orange"
            android:textColor="@android:color/white"
            android:fontFamily="@font/nanumgothicbold"
            android:text="예약"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="15sp"
            android:layout_gravity="center">
        </Button>
    </androidx.cardview.widget.CardView>
</LinearLayout>